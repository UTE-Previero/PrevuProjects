<UserControl x:Class="Prevu.Drawings.Machines.NT_ConveyorBelt"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Prevu.Drawings.Machines"
             mc:Ignorable="d" Height="20" MinHeight="20" MaxHeight="20"
             Width="150">

  <Grid >
    <Rectangle Width="auto" Fill="Gray" RadiusX="10" RadiusY="10" Effect="{DynamicResource MaterialDesignElevationShadow1}"/>
    <Ellipse  Width="20" Height="20"  Fill="#FF4C4C4C" HorizontalAlignment="Left" Effect="{DynamicResource MaterialDesignElevationShadow1}"/>
    <Ellipse  Width="20" Height="20"  Fill="#FF4C4C4C" HorizontalAlignment="Right" Effect="{DynamicResource MaterialDesignElevationShadow1}"/>
  </Grid>
</UserControl>
